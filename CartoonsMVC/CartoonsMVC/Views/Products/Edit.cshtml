@model ProductDto
@{
}

<link rel="stylesheet" href="~/css/style.css">

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Product</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["ProductId"]">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Character Name</label>
                <div class="col-sm-8">
                    <input class="form-check control" asp-for="CharacterName">
                    <span asp-validation-for="CharacterName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Show</label>
                <div class="col-sm-8">
                    <input class="form-check control" asp-for="Show">
                    <span asp-validation-for="Show" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Channel</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Channel">
                        <option value='Cartoon Network'>Cartoon Network</option>
                        <option value='Nickelodeon'>Nickelodeon</option>
                        <option value='Disney Channel'>Disney Channel</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input type="file" class="form-control" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" role="button">Cancel</a>
                </div>

            </div>
        </form>
    </div>

</div>